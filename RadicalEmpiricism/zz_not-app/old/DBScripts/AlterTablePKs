alter table tblWord drop column WordID;
alter table tblWord ADD WordID INT UNSIGNED NOT NULL AUTO_INCREMENT, ADD PRIMARY KEY (WordID);

alter table tblRadical drop column RadicalID;
alter table tblRadical ADD RadicalID INT UNSIGNED NOT NULL AUTO_INCREMENT, ADD PRIMARY KEY (RadicalID);

alter table tblBaseRadicalJunction drop column JunctionID;
alter table tblBaseRadicalJunction ADD JunctionID INT UNSIGNED NOT NULL AUTO_INCREMENT, ADD PRIMARY KEY (JunctionID);

alter table tblWordType drop column WordTypeID;
alter table tblWordType ADD WordTypeID INT UNSIGNED NOT NULL AUTO_INCREMENT, ADD PRIMARY KEY (WordTypeID);